{
  "singleQuote": true,
  "tabWidth": 2,
  "semi": true,
  "printWidth": 80,
  "trailingComma": "all",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "parser": "scss"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "parser": "babel"
      }
    }
  ]
}
